{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "typeRoots": [
            "src/@types",
            "src/app/**/@types",
            "./node_module/@types"
        ],
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/actions": ["./src/actions"],
            "@/components/*": ["./src/components/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/utils": ["./src/lib/utils"],
            "@/db": ["./src/server/db/client.ts"],
            "@db": ["./src/server/db/client.ts"],
            "@db/*": ["./src/server/db/*"],
            "@/db/*": ["./src/server/db/*"],
            "@/auth": ["./src/lib/auth"],
            "@/auth/*": ["./src/lib/auth/*"],
            "@/logger": ["./src/server/lib/logging/logger"],
            "@server/*": ["./src/server/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
    "exclude": ["node_modules"]
}
