# Database
DATABASE_URL="postgres://user:password@localhost:5432/accntu"

# Auth
JWT_SECRET="your-jwt-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email Configuration
# Email provider: 'resend' (recommended), 'smtp' (fallback), or 'mailtrap' (development)
EMAIL_PROVIDER="resend"

# Email sender configuration
EMAIL_FROM="noreply@yourdomain.com"
EMAIL_FROM_NAME="Accntu"
EMAIL_REPLY_TO="support@yourdomain.com"
EMAIL_REPLY_TO_NAME="Accntu Support"

# Resend configuration (recommended)
RESEND_API_KEY="re_your_resend_api_key"

# SMTP configuration (fallback option)
SMTP_HOST="smtp.example.com"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"
SMTP_FROM="noreply@example.com"
SMTP_SECURE="false"

# Mailtrap configuration (development/testing)
MAILTRAP_HOST="sandbox.smtp.mailtrap.io"
MAILTRAP_PORT="2525"
MAILTRAP_USER="your-mailtrap-username"
MAILTRAP_PASS="your-mailtrap-password"

# Email template configuration
LOGO_URL="https://yourdomain.com/logo.png"
SUPPORT_EMAIL="support@yourdomain.com"

# App
NEXT_PUBLIC_APP_URL="http://localhost:3000" 