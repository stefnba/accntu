{% extends "layouts/base.njk" %}

{% block title %}{{ __('notifications.transaction.subject', { amount: transaction.amount }) }} - {{ appName }}{% endblock %}

{% block content %}
<div>
  <h1>{{ __('notifications.transaction.title') }}</h1>
  
  <p>{{ __('notifications.transaction.message', { name: user.name }) }}</p>
  
  <div class="transaction-card">
    <div class="transaction-amount {% if transaction.amount < 0 %}negative{% endif %}">
      {% if transaction.amount >= 0 %}+{% endif %}${{ "%.2f"|format(transaction.amount|abs) }}
    </div>
    
    <div class="transaction-details">
      <p>
        <span class="label">{{ __('notifications.transaction.description_label') }}</span>
        <span class="value">{{ transaction.description }}</span>
      </p>
      <p>
        <span class="label">{{ __('notifications.transaction.date_label') }}</span>
        <span class="value">{{ transaction.date }}</span>
      </p>
    </div>
  </div>
  
  <div class="text-center mt-4">
    <a href="#" class="btn btn-primary">{{ __('notifications.transaction.view_details') }}</a>
  </div>
  
  <div class="text-center mt-4">
    <p class="text-sm">
      <a href="#" style="color: #6b7280; text-decoration: none;">{{ __('notifications.transaction.manage_notifications') }}</a>
    </p>
  </div>
</div>
{% endblock %}